#
# Command aliases
#

alias ....='cd ../..'
alias :e=vim
alias :qa=exit
alias :sp='test -n "$TMUX" && tmux split-window'
alias :vs='test -n "$TMUX" && tmux split-window -h'
alias :wq=exit
alias a=ag
alias b=bundle
alias be='bundle exec'
alias cd..='cd ..'
alias clip='nc -U ~/.clipper.sock'
alias d='hash -d'
alias e=exit
alias f='find . -name'
alias g=git
alias groot='cd $(git rev-parse --show-toplevel 2> /dev/null || echo -n ".")'
alias h=history
alias j=jump
alias l='exa --long --header'
alias ll='exa --long --header -a'
alias o='git oneline'
alias p='git patch'
alias prettyjson='python -m json.tool'
alias oo='git oneline -10'
alias s=ssh
alias t=tmux
alias v=vim

if command -v nvim &> /dev/null; then
  alias vim=nvim # Use `\vim` or `command vim` to get the real vim.
fi

#
# Suffix aliases
# (eg. "foo.md" to open Markdown files in "Marked 2.app")
#
alias -s md='open -a "Marked 2.app"'

#
# Global aliases
# (work at any position within the command line)
#

# Mnemonic: "[C]lip"
alias -g C="|clip"

# Mnemonic: "[G]rep"
alias -g G="|grep"

# Mnemonic: "[H]ead"
alias -g H="|head"

# Pretty-print JSON.
# Mnemonic: "[J]SON"
alias -g J="|python -m json.tool"

# Mnemonic: "[L]ess"
alias -g L="|less"

# Mnemonic: "[R]eset"
alias -g R=";clear;test -n "$TMUX" && tmux clear-history;"

# Mnemonic: "[W]c"
alias -g W="|wc -l"
